<?xml version="1.0" encoding="UTF-8"?>
<scheduled-tasks>
    <task class="org.schematik.scheduler.MyScheduledTask">
        <schedule cron="*/5 * * * * *"/>
    </task>

    <!-- If scheduling this way (<schedule period="12000" initialDelay="1000" fixedRate="true"/>):
            * <period> field is compulsory;
            * <initialDelay> and <fixedRate> are optional;
            * <fixedRate> set to true means that the task will run every <period> milliseconds.
    -->
</scheduled-tasks>